platform :ios, '9.0'

inhibit_all_warnings!

target 'Life' do
  use_frameworks!

  # Color management
  pod 'DynamicColor', '~> 4.0'

  # Date tools
  pod 'DateToolsSwift', '~> 2.0'

  # Image Caching
  pod 'Kingfisher', '~> 4.0'

  # Material design
  pod 'Material', '~> 2.0'

  # Loading indicators
  pod 'NVActivityIndicatorView', '~> 4.0'

  # Network wrapper and Rx
  pod 'Moya/RxSwift', '~> 11.0'
  pod 'RxCocoa', '~> 4.0'

  # Database
  pod 'RxRealm', '~> 0.7'

  # Skeleton
  pod 'SkeletonView', '~> 1.0'

  # AutoLayout
  pod 'SnapKit', '~> 4.0'

  # Linting
  pod 'SwiftLint'

  # Toast
  pod 'Toast', '~> 4.0.0'

  target 'LifeTests' do
    inherit! :search_paths
  end

  target 'LifeUITests' do
    inherit! :search_paths
  end

end
